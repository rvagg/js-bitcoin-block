{
  "name": "bitcoin-block",
  "version": "2.0.2",
  "description": "A Bitcoin block interface and decoder for JavaScript",
  "main": "bitcoin-block.js",
  "dependencies": {
    "@rvagg/ripemd160": "^2.2.1",
    "@stablelib/sha256": "^1.0.1",
    "assert": "^2.0.0",
    "bech32": "^2.0.0",
    "multiformats": "^9.6.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "jsdoc4readme": "^1.4.0",
    "mocha": "^10.0.0",
    "polendina": "^3.0.0",
    "standard": "^17.0.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "lint": "standard",
    "build:types": "tsc --build",
    "build": "npm run build:types",
    "test:browser": "polendina --timeout 320 --runner=mocha --cleanup test/browser.js",
    "test:node": "mocha test/node.js",
    "test": "npm run lint && npm run build:types && npm run test:node",
    "test:ci": "npm run test && npm run test:browser",
    "docs": "jsdoc4readme --readme bitcoin-block.js classes/class-utils.js classes/Block.js classes/Transaction.js classes/TransactionIn.js classes/TransactionOut.js"
  },
  "bin": {
    "js-bitcoin-block": "./bin.js"
  },
  "author": "Rod <rod@vagg.org> (http://r.va.gg/)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvagg/js-bitcoin-block.git"
  },
  "bugs": {
    "url": "https://github.com/rvagg/js-bitcoin-block/issues"
  },
  "homepage": "https://github.com/rvagg/js-bitcoin-block#readme",
  "typesVersions": {
    "*": {
      "*": [
        "types/*"
      ],
      "types/*": [
        "types/*"
      ]
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
